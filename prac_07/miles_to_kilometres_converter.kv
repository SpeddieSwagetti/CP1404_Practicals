BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        TextInput:
            id: input_number
            text: "34"
            font_size: 24
            on_text: app.handle_calculation(self.text)
        BoxLayout:
            orientation: 'vertical'
            Button:
                text: "Up"
                on_press: app.handle_increment(input_number.text, 1)
            Button:
                text: "Down"
                on_press: app.handle_increment(input_number.text, -1)
    #Button:
        #text: "Convert mi to km"
        #on_press: app.handle_calculation(input_number.text)

    Label:
        text: app.kilometres
        font_size: 24
        color: (0.7,0.7,0,1)
